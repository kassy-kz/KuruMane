<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="orz.kassy.kurumane.GsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dddddd">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/gas"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="28dp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="出光GS新栄町支店"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="16dp"
            android:layout_marginLeft="24dp"
            android:gravity="left"
            android:textColor="#000000"
            android:text="電話：052-0987-6543"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:text="住所：名古屋市中区新栄町1-2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:src="@drawable/user_icon"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="32dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="kassy_kz "/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/goodjob"
            android:layout_gravity="center|right"
            android:id="@+id/btnGoodJob"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:id="@+id/txtGoodJob"
            android:gravity="center_vertical|left"
            android:text="523"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="実売価格"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="24dp"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:text="218"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/haioku"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:text="128"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/regular"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:text="108"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/keiyu"/>

    </LinearLayout>


</LinearLayout>
